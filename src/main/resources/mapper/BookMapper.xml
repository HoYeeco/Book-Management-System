<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
                PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="github.hoyeeco.bookmanagementsystem.mapper.BookMapper">
<select id="findAllBooks" resultType="github.hoyeeco.bookmanagementsystem.pojo.Book">
    select *
    from t_book
</select>

<select id="findBookById" resultType="github.hoyeeco.bookmanagementsystem.pojo.Book">
    select *
    from t_book
    where id=#{id}
</select>

<insert id="addBook" useGeneratedKeys="true" keyProperty="id">
    insert into  t_book
    values (null, #{name}, #{price}, #{category}, #{pnum}, #{imgurl}, #{description}, #{author}, #{sales}, #{time}, #{ISBN}, #{press} )
</insert>

<update id="updateBook" parameterType="github.hoyeeco.bookmanagementsystem.pojo.Book">
    update t_book set
                      name=#{name},price=#{price},category=#{category}, pnum=#{pnum}, imgurl=#{imgurl},description= #{description}, author=#{author}, sales=#{sales}, time=#{time}, ISBN=#{ISBN}, press=#{press}
    where id=#{id}
</update>

<delete id="deleteBook" parameterType="int">
    delete from t_book where id=#{id}
</delete>

<select id="searchBooks" resultType="github.hoyeeco.bookmanagementsystem.pojo.Book">
    select * from t_book
    <where>
        <if test="name!=null and name!=''">
            and name LIKE CONCAT ('%', #{name}, '%')
        </if>
        <if test="category!=null and category!=''">
            and category LIKE CONCAT ('%', #{category}, '%')
        </if>
        <if test="author!=null and author!=''">
            and author LIKE CONCAT ('%', #{author}, '%')
        </if>
    </where>
</select>

<select id="searchBookByStr" parameterType="java.lang.String" resultType="github.hoyeeco.bookmanagementsystem.pojo.Book">
    select *
    from t_book
    where 1=1
    <if test="searchStr!=null and searchStr!=''">
        AND (name LIKE CONCAT ('%', #{searchStr}, '%')
        or category LIKE CONCAT ('%', #{searchStr}, '%')
        or author LIKE CONCAT ('%', #{searchStr}, '%'))
    </if>
</select>

<delete id="deleteBooks" parameterType="int[]">
    delete from t_book where id in
    <foreach collection="array" item="id" open="(" close=")" separator=",">
        #{id}
    </foreach>
</delete>
</mapper>




