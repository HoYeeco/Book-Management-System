<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="github.hoyeeco.bookmanagementsystem.mapper.ProductMapper">
    <select id="findProductByOrderId" resultType="github.hoyeeco.bookmanagementsystem.pojo.Product" parameterType="Integer">
        select * from t_product where id in
                        (SELECT product_id FROM t_orderitem where order_id = #{id})
    </select>
</mapper>